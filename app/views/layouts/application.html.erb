<!DOCTYPE html>
<html>
  <head>
    <title>Barker</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%# these flash hashes are added per the Devise install recommendation %>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">      
        <p class="notice"><%= notice %></p> 
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class='notification is-danger global-notification'>
        <p class='alert'><%= alert %></p>
      </div>
    <% end %>

    <%# This is the website layout framework  %>
    <nav class="navbar is-info">
      <div class="navbar-brand">    
        <%= link_to root_path, class: "navbar-item" do %>
          <h1 class='title is-5'>Barker</h1>
        <% end %>
        <div class='navbar-burger burger' data-target='navbarExample'>
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>

      <%# new_bark_path corresponds to the URI for new barks - see Rails Routes in console %>
      <div id='navbarExample' class='navbar-menu'>
        <div class='navbar-end'>
          <div class='field is-grouped'>
            <p class='control'>
              <%= link_to 'New Bark', new_bark_path, class: 'button is-info is-inverted' %>
            </p>
            <p class='control'>Sign Up</p>
          </div>
        </div>
      </div>
    </nav>

    <%= yield %>
  </body>
</html>
