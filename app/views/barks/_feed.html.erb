<%# sets left column %>
<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>
    <div class="media-content">      
    
    </div>
  </article>
</div>

<%# displays each bark %>
<% @barks.each do | bark | %>
<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
      <img src="https://bulma.io/images/placeholders/64x64.png">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <strong>Mr. Rover</strong><br /> <%# placeholder %>
        <small>@whereismyball</small><br /> <%# placeholder %>
        <p><%= bark.bark %></p>
      </div>
      <nav class="level">
        <div class="level-left is-mobile">
          <%= link_to bark, class: 'level-item' do %>
            <span class='icon'><i class='fa fa-link' aria-hidden='true'></i></span>
          <% end %>
          <%= link_to edit_bark_path(bark), class: 'level-item' do %>
            <span class='icon'><i class='fa fa-pencil' aria-hidden='true'></i></span>
          <% end %>
          <%= link_to bark, method: :delete, data: { confirm: 'Are you sure you wanna delete me?'} do %>
            <span class='icon'><i class='fa fa-trash-o' aria-hidden='true'></i></span>
          <% end %>
        </div>
      </nav>
    </div>
  </article>
</div>
<% end %>