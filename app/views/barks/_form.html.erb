<%= simple_form_for(@bark) do | f | %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :bark, label: 'Bark out loud', input_html: { class: 'textarea' }, wrapper: false, label_html:
        { class: 'label' }, placeholder: 'Compose new bark...', autofocus: true %>
  </div>
</div>
<%= f.button :submit, class: 'button is-info' %>
<% end %>